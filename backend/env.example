# AI Meeting Assistant - Environment Variables Template
# Copy this file to .env and fill in your values

# Application
PROJECT_NAME=AI Meeting Assistant
APP_VERSION=0.1.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
# Development: SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./meeting_assistant.db
# Production: PostgreSQL (example)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/meeting_assistant
DATABASE_ECHO=False

# CORS (comma-separated origins for production)
# CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# =============================================================================
# LLM Configuration (E03)
# =============================================================================

# Provider options: anthropic, openai, azure_openai
LLM_PROVIDER=azure_openai

# Model name (varies by provider)
# - Anthropic: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022, etc.
# - OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, etc.
# - Azure OpenAI: Use your deployment name
LLM_MODEL=gpt-4o-dev-aigateway-exception

# API Key (required for all providers)
LLM_API_KEY=your-api-key-here

# Azure OpenAI specific settings (required when LLM_PROVIDER=azure_openai)
AZURE_OPENAI_ENDPOINT=https://dev-adhoc-ai-gateway-exception.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-12-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-dev-aigateway-exception

# LLM Request settings
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

